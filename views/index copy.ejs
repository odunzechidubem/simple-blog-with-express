<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
</head>
<body>
    <% if (posts.length > 0) { %>
        <% posts.forEach(post => { %>
            <div>
                <h2><%= post.title %></h2>
                <p><%= post.body %></p>
                <p><%= post.poster %></p>
            </div>
        <% }) %>
    <% } else { %>
        <h1>No posts to display</h1>
    <% } %>
    <h1>Blog posts</h1>
    <form action="/submit" method="POST">
        <input type="text" name="title" placeholder="Enter your blog title" required>
        <textarea name="body" placeholder="Enter your blog content" required></textarea>
        <input type="text" name="poster" placeholder="Enter name of poster">
        <input type="submit" value="Post">
    </form>
</body>
</html>
